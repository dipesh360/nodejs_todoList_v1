<%- include("header.ejs") -%>
<div class="box" id="heading">
  <h1><%= kindOfDay %></h1>
</div>

<div class="box">
  <% todos.forEach(item=> { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= item %></p>
  </div>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="item_name"
      placeholder="New Item"
      autocomplete="off"
      required
    />
    <button type="submit">+</button>
  </form>
</div>

<%- include("footer.ejs") -%>
